<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/player_view_layout"
            >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:id="@+id/player_list_name"
            android:textSize="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device"
            android:paddingStart="20dp"
            android:id="@+id/player_list_device"
            android:layout_toEndOf="@id/player_list_name"
            android:textSize="30dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_gravity="end"
            android:layout_toLeftOf="@+id/reorder_player_button"
            android:id="@+id/remove_player_button"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:paddingEnd="10dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorGray"
            android:background="@null"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reorder_black_24dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:id="@+id/reorder_player_button"
            android:background="@null"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:paddingEnd="10dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorGray"

    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_black_24dp"
            android:paddingStart="15dp"
            android:layout_toEndOf="@+id/player_list_device"
            android:layout_centerVertical="true"
            android:id="@+id/host_indicator"
            android:tint="@color/colorGray"
    />




</RelativeLayout>