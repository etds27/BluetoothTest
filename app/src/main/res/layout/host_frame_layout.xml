<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal"
>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_hash_frame"
            android:gravity="center"
            android:layout_weight="0"
    >

        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/generate_random_room_button"
                android:src="@drawable/ic_casino_black_24dp"
                android:layout_weight="0"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:textSize="40dp"
                android:paddingStart="10dp"
                android:id="@+id/random_room_hash_text"

        />
    </LinearLayout>


    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_bluetooth_connected_black_24dp"
            android:id="@+id/start_bt_connection_as_host_button"
            android:contentDescription="BT"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_weight="0"
            android:id="@+id/temp_start_button"

    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomize"
            android:id="@+id/randomize_order_button"
    />


</LinearLayout>