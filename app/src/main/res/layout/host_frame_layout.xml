<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/random_hash_frame"
    >

        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/generate_random_room_button"
                android:src="@drawable/ic_casino_black_24dp"
                android:layout_weight=".25"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:textSize="40dp"
                android:paddingStart="10dp"
                android:id="@+id/random_room_hash_text"/>
    </LinearLayout>


    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_bluetooth_connected_black_24dp"
            android:layout_below="@id/random_hash_frame"
            android:layout_centerHorizontal="true"
            android:id="@+id/start_bt_connection_as_host_button"

            />


</RelativeLayout>